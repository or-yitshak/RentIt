<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolorstart"
    android:padding="15dp"
    tools:context=".post.PostPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_card_style"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Title"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/categoryTxt"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@id/titleTxt"
                android:layout_marginTop="25dp"
                android:text="Category: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/publisherTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@id/categoryTxt"
                android:layout_marginTop="10dp"
                android:text="Publisher Name: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/addressTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_below="@id/publisherTxt"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Address: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/priceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_below="@id/addressTxt"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Price: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@id/priceTxt"
                android:layout_marginTop="10dp"
                android:text="Description: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/descriptionContentTxt"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceTxt"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/descriptionTxt"
                android:text="content"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imgView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@id/descriptionContentTxt"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/datesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgView"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/btncolor1"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="choose dates"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/rentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/datesBtn"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/btncolor1"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="RENT IT"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/interestedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/btncolor1"
                android:text="interested"
                android:visibility="gone"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/EditBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/interestedBtn"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/btncolor1"
                android:text="Edit"
                android:visibility="gone"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/EditBtn"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#FF0000"
                android:text="Delete"
                android:visibility="gone"
                app:cornerRadius="50dp" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>